            margin-left: 10px;
        }

        body {
            margin: 0;
            padding: 0;
        }

        .news-card:hover {
            transform: scale(1.05);
            /* Increase the size slightly on hover */
            transition: transform 0.3s ease;
            /* Apply a smooth transition effect */
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.3);
            /* Add a subtle shadow */
            animation: blink 1s infinite;
        }

        @keyframes blink {
            0%, 100% {
